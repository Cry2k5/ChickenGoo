generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum Role {
  CUSTOMER
  ADMIN
}
enum statusDriver {
  AVAILABLE
  ON_DELIVERY
}
enum statusOrder {
  PENDING
  ACCEPTED
  DRIVER_ASSIGNED
  DELIVERED
  CANCELLED
}
enum paymentMethod {
  COD
  MOMO
}
model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  phone        String   @unique
  passwordHash String   @map("password_hash")
  role         Role     @default(CUSTOMER)
  address      String?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  branch       Branch[]
  order Order[]
  cart Cart[]
  bill Bill[]

  @@map("users")
  @@index([role])
  @@index([createdAt])
  @@index([role, name])
}
model Branch {
  id        Int      @id @default(autoincrement())
  userId    Int    @unique
  user      User   @relation( fields: [userId], references: [id])
  name      String
  phone     String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  order Order[]
  drivers  Driver[]
  cart Cart[]
  bill Bill[]

  @@map("branches")     
  @@index([name])
}
model Category{
  id        Int      @id @default(autoincrement())
  name      String 
  product   Product[]
  combo    Combo[]
  @@map("categories")
  @@index([name])
}

model Combo{
  id         Int      @id @default(autoincrement())
  categoryId Int
  category   Category @relation(fields: [categoryId],references: [id])
  name       String
  price      Int
  desc       String?   @map("desc")
  image      String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  comboItems ComboItem[]

  @@map("combo")
  @@index([name])
}

model Product {
  id         Int      @id @default(autoincrement())
  categoryId Int
  category   Category @relation(fields: [categoryId],references: [id])
  name       String
  price      Int
  desc       String?   @map("desc")
  image      String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  comboItem ComboItem[]
  cartItem CartItem[]
  billItem BillItem[]
  orderItem OrderItem[]

  @@map("products")
  @@index([name])
} 

model ComboItem{

  id         Int      @id @default(autoincrement())
  productId  Int
  comboId    Int
  quantity   Int      @default(1)
  product Product @relation(fields: [productId], references: [id])
  combo Combo @relation(fields: [comboId], references: [id])
  @@unique([productId, comboId])
  @@map("combo_items")
}

model Driver{
  id        Int      @id @default(autoincrement())
  branchId Int @map("branch_id")
  branch Branch @relation(fields: [branchId], references: [id])
  name String  
  phone String  @unique
  passwordHash String @map("password_hash")
  status statusDriver @default(AVAILABLE)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  orderDriver OrderDriver[]
  @@map("drivers")
}

model Order{
  id          Int      @id @default(autoincrement())
  userId Int @map("user_id")
  user User @relation(fields: [userId], references: [id])
  branchId Int @map("branch_id")
  branch Branch @relation(fields: [branchId], references: [id])
  totalAmount Int @map("total_amount")
  status statusOrder @default(PENDING)
  paymentMethod paymentMethod @map("payment_method")
  deliveryAddress String @map("delivery_address")
  deliveryPhone String @map("delivery_phone")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  orderDriver OrderDriver[]
  orderItem OrderItem[]
  
  @@map("orders")
  @@index([status, createdAt])
}

model OrderDriver{
  id          Int      @id @default(autoincrement())
  orderId Int @map("order_id")
  driverId Int @map("driver_id")
  quantity Int
  price Float
  
  order Order @relation(fields: [orderId], references: [id])
  driver Driver @relation(fields: [driverId], references: [id])

  @@unique([orderId, driverId])
  @@map("order_drivers")
}

model OrderItem{
  id          Int      @id @default(autoincrement())
  orderId Int @map("order_id")
  productId Int @map("product_id")
  quantity Int
  price Float
  
  order Order @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@unique([orderId, productId])
  @@map("order_items")
}

model Cart {
  id          Int      @id @default(autoincrement())
  userId Int @map("user_id")
  branchId Int @map("branch_id")
  totalAmount Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  branch Branch @relation(fields: [branchId], references: [id])

  cartItem CartItem[]

  @@index([userId, branchId])
  @@map("carts")
  
}

model CartItem{
  id          Int      @id @default(autoincrement())
  productId Int @map("product_id")
  cartId Int @map("cart_id")
  quantity Int
  price Int 

  product Product @relation(fields: [productId], references: [id])
  cart Cart @relation(fields: [cartId], references: [id])

  @@unique([productId, cartId])
  @@map("cart_items")
}

model Bill{
  id          Int      @id @default(autoincrement())
  userId Int @map("user_id")
  branchId Int @map("branch_id")
  totalPrice Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  branch Branch @relation(fields: [branchId], references: [id])

  @@index([userId, branchId])
  billItem BillItem[]


  @@map("bills")
}

model BillItem {
  id        Int     @id @default(autoincrement())
  billId    Int @map("bill_id")
  productId Int @map("product_id")
  quantity  Int
  price     Int     

  bill      Bill    @relation(fields: [billId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@unique([billId, productId])
  @@map("bill_items")
}






